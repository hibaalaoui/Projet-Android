<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Montant (DH)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinnerExpenseCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editExpenseNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note (facultative)"
            android:inputType="text"
            android:layout_marginBottom="16dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddExpense"
            android:text="Ajouter DÃ©pense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#154928" />

    </LinearLayout>
</ScrollView>
